<resources>
    <color name="material_purple">#AA66CC</color>
    <color name="dark_purple">#9933CC</color>
    <color name="material_blue">#33B5E5</color>
    <color name="dark_blue">#0099CC</color>
    <color name="material_green">#99CC00</color>
    <color name="dark_green">#669900</color>
    <color name="material_red">#FF4444</color>
    <color name="dark_red">#CC0000</color>
    <color name="material_orange">#FFBB33</color>
    <color name="dark_orange">#FF8800</color>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarTabStyle">@style/MyActionBarTabs</item>
    </style>
    <style name="DefaultTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/material_purple</item>
        <item name="colorPrimaryDark">@color/dark_purple</item>
        <item name="actionBarTabStyle">@style/MyActionBarTabs</item>
    </style>
    <style name="BlueTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/material_blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="actionBarTabStyle">@style/MyActionBarTabs</item>
    </style>
    <style name="GreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/material_green</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="actionBarTabStyle">@style/MyActionBarTabs</item>
    </style>
    <style name="RedTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/material_red</item>
        <item name="colorPrimaryDark">@color/dark_red</item>
        <item name="actionBarTabStyle">@style/MyActionBarTabs</item>
    </style>
    <style name="OrangeTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/material_orange</item>
        <item name="colorPrimaryDark">@color/dark_orange</item>
        <item name="actionBarTabStyle">@style/MyActionBarTabs</item>
    </style>
    <style name="Dialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/material_purple</item>
    </style>
    <style name="BlueDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/material_blue</item>
    </style>
    <style name="GreenDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/material_green</item>
    </style>
    <style name="RedDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/material_red</item>
    </style>
    <style name="OrangeDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/material_orange</item>
    </style>
    <style name="MyActionBarTabs" parent="@style/Widget.AppCompat.Light.ActionBar.TabView"/>
</resources>