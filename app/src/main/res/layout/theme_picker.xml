<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/theme_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:text="Choose Your Theme"
        android:textSize="25sp"
        />
    <Button
        android:id="@+id/default_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/theme_tv"
        android:padding="5dp"
        android:background="@color/material_purple"
        android:text="purple"/>
    <Button
        android:id="@+id/blue_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/default_color"
        android:padding="5dp"
        android:background="@color/material_blue"
        android:text="blue"/>

    <Button
        android:id="@+id/green_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blue_color"
        android:padding="5dp"
        android:background="@color/material_green"
        android:text="green"/>

    <Button
        android:id="@+id/red_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/green_color"
        android:padding="5dp"
        android:background="@color/material_red"
        android:text="red"/>

    <Button
        android:id="@+id/orange_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/red_color"
        android:padding="5dp"
        android:background="@color/material_orange"
        android:text="orange"/>
</RelativeLayout>
