<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jonestech.simpleserviceassistant" >
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".myApplication"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="jonestech.simpleserviceassistant.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Add_Report_Class" android:theme="@style/Dialog" />
        <activity android:name=".Edit_Report_Class" android:theme="@style/Dialog"/>
        <activity android:name=".Email_Report_Class" android:theme="@style/Dialog"/>
        <activity android:name=".SMS_Report_Class" android:theme="@style/Dialog"/>
        <activity android:name=".SettingsActivity"/>
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent"/>
    </application>

</manifest>
